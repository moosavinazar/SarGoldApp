<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <changeSet author="SAR SOFT" id="entity_audience">
        <createTable tableName="audience">
            <column name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="audience_pkey"/>
            </column>
            <column name="person_id" type="bigint">
                <constraints nullable="true" />
            </column>
            <column name="bank_id" type="bigint">
                <constraints nullable="true" />
            </column>
            <column name="laboratory_id" type="bigint">
                <constraints nullable="true" />
            </column>
        </createTable>
        <sql>
            CREATE UNIQUE INDEX unique_constrain_audience_person
                ON dbo.audience(person_id)
                WHERE person_id IS NOT NULL;
            CREATE UNIQUE INDEX unique_constrain_audience_bank
                ON dbo.audience(bank_id)
                WHERE bank_id IS NOT NULL;
            CREATE UNIQUE INDEX unique_constrain_audience_laboratory
                ON dbo.audience(laboratory_id)
                WHERE laboratory_id IS NOT NULL;
        </sql>
    </changeSet>

</databaseChangeLog>
