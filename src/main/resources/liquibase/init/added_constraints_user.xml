<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <changeSet author="SAR SOFT" id="constraints_user">
        <addUniqueConstraint columnNames="username"
                             constraintName="uniqueConstraint-username-auth_user"
                             tableName="auth_user"/>
        <addUniqueConstraint columnNames="code"
                             constraintName="uniqueConstraint-code-auth_user"
                             tableName="auth_user"/>
        <addForeignKeyConstraint
                baseColumnNames="person_id"
                baseTableName="auth_user"
                constraintName="foreignConstraint-person_id-auth_user-id-person"
                deferrable="false"
                initiallyDeferred="false"
                onDelete="NO ACTION"
                onUpdate="NO ACTION"
                referencedColumnNames="id"
                referencedTableName="person"
                validate="true"/>
        <addForeignKeyConstraint
                baseColumnNames="user_id"
                baseTableName="auth_user_groups"
                constraintName="foreignConstraint-user_id-auth_user_groups-id-auth_user"
                deferrable="false"
                initiallyDeferred="false"
                onDelete="NO ACTION"
                onUpdate="NO ACTION"
                referencedColumnNames="id"
                referencedTableName="auth_user"
                validate="true"/>
        <addForeignKeyConstraint
                baseColumnNames="groups_id"
                baseTableName="auth_user_groups"
                constraintName="foreignConstraint-groups_id-auth_user_groups-id-auth_group"
                deferrable="false"
                initiallyDeferred="false"
                onDelete="NO ACTION"
                onUpdate="NO ACTION"
                referencedColumnNames="id"
                referencedTableName="auth_group"
                validate="true"/>
    </changeSet>

</databaseChangeLog>
